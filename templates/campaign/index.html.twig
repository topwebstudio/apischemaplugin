{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"> Campaigns ({{ campaigns.getTotalItemCount() }}) </h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                
                   
                <div style="padding-left:20px" class="typography-line">
                   
                    <p class="text-info">
                    Don't forget to set IPN URL 
                        {{ app.request.server.get('REQUEST_SCHEME') ~ '://' ~  app.request.host ~ '/ipn/'~ setting('api_key') }} 
                        in Campaign Settings. 
                     </p>
                </div>
                 
                
                
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Campaign Name</th>
                            <th>Campaign Id</th>
                            <th>Campaign Secret Key</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for campaign in campaigns %}
                            <tr>
                                <td>{{ campaign.campaignName }}</td> 
                                <td>{{ campaign.campaignId }}</td> 
                                <td>{{ campaign.secretKey }}</td> 
                                <td>
                                    <a href="{{ path('campaign_edit', {'id': campaign.id }) }}">edit</a> 
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table> 
            </div>    
            {{ knp_pagination_render(campaigns) }}    
        </div>   <a class="btn btn-round btn-fill btn-info" href="{{ path('campaign_new') }}">New  Product</a>
    </div>
{% endblock %}