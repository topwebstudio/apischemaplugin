{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">
                  Domains ({{ domains.getTotalItemCount() }}) 
                </h4>
            </div>
             <div class="card-body table-full-width table-responsive">
                 <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>DOMAIN</th>
                            <th>Purchase Transaction #</th>
                            <th>PURCHASE KEY</th>
                            <th title="Not to be provided to the customer, for our reference only">DOMAIN KEY (INTERNAL SECRET KEY)</th>
                         
                            <th>Delete </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for domain in domains %}
                            
                            <tr {% if domain.enabled == false %} class="inactive" {% endif %}>
                                <td>{{ domain.domain }}</td>
                                 <td>{{ domain.purchase.transactionId }}</td>
                                <td>{{ domain.purchase.licenses }}</td>
                                <td>{{ domain.domainKey }}</td>
                               
                                <td>
                                    <span data-url="{{ url('delete_domain', {'id': domain.id}) }}" class="deleteDomain">
                                        Delete
                                    </span>    
                                </td>   
                            </tr>
                        {% endfor %}
                    </tbody>
                </table> 
            </div>    
            {{ knp_pagination_render(domains) }}    
        </div>   
    </div>


{% endblock %}