{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Plugin Versions ({{ pluginVersions.getTotalItemCount() }}) </h4>
            </div>
         <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Version</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for pluginVersion in pluginVersions %}
                            <tr>
                                <td>{{ pluginVersion.version }}</td>
                                <td>{{ pluginVersion.date | date  }}</td>
                                <td>{{ pluginVersion.description | raw }}</td>
                                <td><a href="{{ path('plugin-version_edit', { 'id': pluginVersion.id }) }}">edit</a> </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table> 
            </div>    {{ knp_pagination_render(pluginVersions) }}    
        </div>   <a class="btn btn-round btn-fill btn-info" href="{{ path('plugin-version_new') }}">New Plugin Version</a>
    </div>
{% endblock %}