{% extends 'base.html.twig' %}

{% block body %}


    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Schema Authors</h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>About</th>
                            <th>Submitted Schemas</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for schemaAuthor in schemaAuthors %}
                            <tr>
                                <td>{{ schemaAuthor.id }}</td>
                                <td>{{ schemaAuthor.name }}</td>
                                <td>{{ schemaAuthor.email }}</td>
                                <td>{{ schemaAuthor.content }}</td>
                                <td style="text-align: center">{{ schemaAuthor.schemaBuilders | length }}</td>
                                <td><a href="{{ path('schema_author_edit', {'id': schemaAuthor.id }) }}">edit</a> </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {{ knp_pagination_render(schemaAuthors) }}
        </div>

    </div>


{% endblock %}
