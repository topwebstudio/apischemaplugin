{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Settings </h4>
            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Setting</th>
                            <th>Value</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for setting in settings %}
                            <tr>
                                <td>{{ setting.key }}</td> 
                                <td>{{ setting.value }}</td>
                                <td>{{ setting.content | raw }}</td>
                                <td><a href="{{ path('setting_edit', { 'id': setting.id }) }}">edit</a> </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table> 
            </div>    {{ knp_pagination_render(settings) }}    
        </div>   
    </div>
{% endblock %}